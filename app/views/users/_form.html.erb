<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(user) do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <form>
        <div class="row">
          <div class="col-sm-6 col-md-4" style="float:none; margin-left:auto; margin-right:auto">
            <div class="thumbnail" style="text-align: center">
              <div id="target">
                <img style="max-width:200px; max-height:200px" src="/assets/default-profile.png" alt="...">
              </div>
              <label>Select Profile Image</label>
              <%= f.file_field :avatar, type: "file", id: "pictureInput", class: "form-control-file" %>
            </div>
          </div>
        </div><!-- thumbnail-image -->
        <div class="form-group">
          <label>First Name</label>
          <%= f.text_field :first_name, class: "form-control", placeholder: "first name..."%>
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <%= f.text_field :last_name, class: "form-control", placeholder: "last name..."%>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <%= f.text_field :email, type: "email", class: "form-control", placeholder: "email..."%>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label>Organization</label>
          <%= f.text_field :organization, class: "form-control", placeholder: "organization..."%>
        </div>
        <div class="form-group">
          <label>Password</label>
          <%= f.password_field :password, class: "form-control", placeholder: "password..." %>
        </div>
        <div class="form-group">
          <label>Password Confirmation</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation..." %>
        </div>
        <div class="form-group">
          <label for="exampleTextarea">Bio</label>
          <%= f.text_area :biography, class: "form-control", rows: "3", placeholder: "biography..."  %>
        </div>
        <%= f.button class: "btn btn-default", type: "submit" do %>
          Sign Up
        <% end %>
      </form>
    <% end %>
  </div>
</div> <!-- create-user-form -->
